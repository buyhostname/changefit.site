extends layout

block content
  .min-h-screen.flex.items-center.justify-center.p-4
    .w-full.max-w-md.bg-gray-800.rounded-2xl.shadow-xl.p-8
      h1(class="text-2xl font-bold text-center mb-6") Virtual Try-On
      
      if error
        .bg-red-500.text-white.p-3.rounded-lg.mb-4.text-center= error
      
      form(action="/login" method="POST" class="space-y-4")
        div
          label(for="password" class="block text-sm font-medium mb-2") Password
          input(type="password" id="password" name="password" required 
                class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none")
        
        button(type="submit" class="w-full py-3 bg-blue-600 hover:bg-blue-700 rounded-lg font-medium transition")
          | Login
      
      .mt-6.pt-6.border-t.border-gray-700
        p(class="text-gray-400 text-sm text-center mb-4") Or continue without password (requires your own API keys)
        
        form(action="/login/guest" method="POST")
          button(type="submit" class="w-full py-3 bg-gray-700 hover:bg-gray-600 rounded-lg font-medium transition")
            | Continue as Guest
        
        .mt-4.text-xs.text-gray-500.text-center
          p Get API keys from:
          .flex.justify-center.gap-4.mt-2
            a(href="https://aistudio.google.com/app/apikey" target="_blank" class="text-blue-400 hover:underline") Google AI Studio
            a(href="https://console.x.ai/team/default/api-keys" target="_blank" class="text-blue-400 hover:underline") xAI Console
