doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover, user-scalable=no")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
    meta(name="theme-color" content="#000")
    title #{title || 'Virtual Try-On'}
    style.
      * { box-sizing: border-box; -webkit-tap-highlight-color: transparent; }
      body { 
        margin: 0; 
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: #000; 
        color: #fff; 
        -webkit-font-smoothing: antialiased;
        line-height: 1.5;
      }
      input, textarea, button, select { font-family: inherit; }
      a { color: #888; text-decoration: none; }
      a:hover { color: #fff; }
      .container { max-width: 400px; margin: 0 auto; padding: 0 20px; }
      .btn { 
        display: inline-flex; align-items: center; justify-content: center;
        height: 40px; padding: 0 16px; 
        background: #fff; color: #000; 
        border: none; border-radius: 5px; 
        font-size: 14px; font-weight: 500;
        cursor: pointer; transition: opacity 0.15s;
      }
      .btn:hover { opacity: 0.9; }
      .btn:active { transform: scale(0.98); }
      .btn:disabled { opacity: 0.5; cursor: not-allowed; }
      .btn-secondary { background: transparent; color: #fff; border: 1px solid #333; }
      .btn-secondary:hover { border-color: #555; background: #111; }
      .input {
        width: 100%; height: 40px; padding: 0 12px;
        background: transparent; color: #fff;
        border: 1px solid #333; border-radius: 5px;
        font-size: 14px; outline: none;
      }
      .input:focus { border-color: #fff; }
      .input::placeholder { color: #555; }
      textarea.input { height: auto; padding: 12px; resize: none; }
      .label { display: block; font-size: 13px; color: #888; margin-bottom: 8px; }
      .card { border: 1px solid #222; border-radius: 8px; padding: 20px; }
      .divider { height: 1px; background: #222; margin: 24px 0; }
      .text-muted { color: #666; }
      .text-sm { font-size: 13px; }
      .text-xs { font-size: 12px; }
      .mt-1 { margin-top: 8px; }
      .mt-2 { margin-top: 16px; }
      .mt-3 { margin-top: 24px; }
      .mb-1 { margin-bottom: 8px; }
      .mb-2 { margin-bottom: 16px; }
      .mb-3 { margin-bottom: 24px; }
      .flex { display: flex; }
      .items-center { align-items: center; }
      .justify-between { justify-content: space-between; }
      .justify-center { justify-content: center; }
      .gap-1 { gap: 8px; }
      .gap-2 { gap: 12px; }
      .w-full { width: 100%; }
      .hidden { display: none !important; }
      @keyframes spin { to { transform: rotate(360deg); } }
      .spinner { width: 16px; height: 16px; border: 2px solid #333; border-top-color: #fff; border-radius: 50%; animation: spin 0.6s linear infinite; }
    block head
    script(data-collect-dnt="true" async src="https://sa.changefit.site/latest.js")
  
  body
    block content
    block scripts
